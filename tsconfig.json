{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        // "outDir": "./dist/",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    // "include": [
    //     "src/content-scripts/**/*",
    //     "src/extension-scripts/**/*",
    //     "src/background-scripts/**/*"
    // ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}